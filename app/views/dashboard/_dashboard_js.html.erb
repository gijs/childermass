<script type="text/javascript">
  $(document).ready(function() {
    Dashboard = {};
    Dashboard.user = new Childermass.Models.GithubUser();
    Dashboard.repos = new Childermass.Collections.GithubRepos();
    Dashboard.router = new Childermass.Routers.DashboardRouter({currentUser: Dashboard.user, repos: Dashboard.repos});

    Dashboard.currentUserView = new Childermass.Views.CurrentUser({el: '#current_user', model: Dashboard.user});
    Dashboard.userSelectView = new Childermass.Views.UserSelect({el: '#user_select', router: Dashboard.router});
    Dashboard.reposView = new Childermass.Views.ReposCollection({el: '#repos_table', collection: Dashboard.repos});
    Dashboard.userSelectView.render()

    Backbone.history.start({root: '', pushState: true});
  });
</script>

